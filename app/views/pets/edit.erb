<h1>Edit a Pet and/or their Owner</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <label>Pet Name: </label>
    <br></br>
    <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">
    <%binding.pry%>
    <br></br>
  <label>Owner Name: </label>
    <br></br>
    <input type="text" name="owner_name" id="owner_name" value="<%=@pet.owner.name%>">
  <label>Choose an Existing Owner:</label>
    <br></br>
    <%@owner.each do |owner|%>
      <input type="checkbox" name="pet[owner_ids][]" id="<%=owner.id%>" value="<%=owner.id%>" <%='checked' if @pets.owner.include?(owner) %><%=owner.name%></input>
    <%end%>
    <input type="submit" value="Update Info">
</form>
